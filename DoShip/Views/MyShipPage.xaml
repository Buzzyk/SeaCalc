    <Grid>
        <Pivot>
            <PivotItem Header="Ship equipment">
                <ScrollViewer>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"
                                          MaxWidth="1100"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <my:Expander Header="Cannons"
                                     HorizontalAlignment="Stretch"
                                     HorizontalContentAlignment="Stretch">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0"
                                        CornerRadius="{ThemeResource ControlCornerRadius}">
                                        <CommandBar>
                                            <CommandBar.PrimaryCommands>
                                                <AppBarButton Icon="Add" Label="Add new"/>
                                                <AppBarSeparator />
                                                <AppBarButton Icon="Edit" Label="Like"/>
                                                <AppBarButton Icon="SelectAll" Label="Like"/>
                                                <AppBarButton Icon="Delete" Label="Dislike"/>
                                                <AppBarSeparator />
                                                <AppBarButton Icon="ViewAll" Label="Orientation"/>
                                            </CommandBar.PrimaryCommands>
                                        </CommandBar>
                                    </Border>
                                    <ScrollViewer Grid.Row="1"
                                              MaxHeight="200"
                                              Margin="0, 10, 0, 0">
                                        <GridView x:Name="gridView"
                                                  ItemsSource="{x:Bind Ship.Cannons}"
                                                  Margin="5"
                                                  SelectionMode="Single"
                                                  HorizontalAlignment="Center"
                                                  ContainerContentChanging="gridView_ContainerContentChanging">
                                            <GridView.ItemContainerStyle>
                                                <Style TargetType="GridViewItem">
                                                    <Setter Property="Margin" Value="3"/>
                                                    <Setter Property="CornerRadius" Value="25"/>
                                                </Style>
                                            </GridView.ItemContainerStyle>

                                            <GridView.ItemTemplate>
                                                <DataTemplate x:DataType="models:Cannon">
                                                    <Grid CornerRadius="8">
                                                        <Image Source="{x:Bind Image}"
                                                                   Width="66"
                                                                   Height="65"/>
                                                        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                                                                  Opacity=".75"
                                                                  Height="20"
                                                                  VerticalAlignment="Bottom"
                                                                  Padding="5, 0, 5, 2">
                                                            <TextBlock Text="{x:Bind Level}"
                                                                           HorizontalAlignment="Left"/>
                                                            <TextBlock Text="{x:Bind Amount}"
                                                                           HorizontalAlignment="Right"/>
                                                        </Grid>
                                                        <Grid.ContextFlyout>
                                                            <my:CommandBarFlyout>
                                                                <AppBarButton Label="Edit" Icon="Edit"/>
                                                                <AppBarButton Label="Delete" Icon="Delete"/>
                                                                <my:CommandBarFlyout.SecondaryCommands>
                                                                    <AppBarButton Label="Select all" Icon="SelectAll" />
                                                                </my:CommandBarFlyout.SecondaryCommands>
                                                            </my:CommandBarFlyout>
                                                        </Grid.ContextFlyout>
                                                    </Grid>
                                                </DataTemplate>
                                            </GridView.ItemTemplate>
                                        </GridView>
                                    </ScrollViewer>

                                </Grid>

                            </my:Expander>
                            <my:Expander Header="Expantions"
                                     HorizontalAlignment="Stretch">

                            </my:Expander>
                            <my:Expander Header="Figurehead"
                                     HorizontalAlignment="Stretch">

                            </my:Expander>
                            <my:Expander Header="Sails"
                                     HorizontalAlignment="Stretch">

                            </my:Expander>
